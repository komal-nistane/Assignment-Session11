<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/text_field1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message1"
            android:textSize="@dimen/textSize"/>

        <TextView
            android:id="@+id/text_field2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_field1"
            android:text="@string/message2"
            android:textSize="@dimen/textSize"
            />

        <TextView
            android:id="@+id/text_field3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_field2"
            android:text="@string/message3"
            android:textSize="@dimen/textSize"
            />
    </RelativeLayout>
</RelativeLayout>